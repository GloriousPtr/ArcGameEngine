{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Clang Build",
            "command": "./GenerateMake.sh && make CSC=mcs -j$(nproc)",
            "options": {
                "cwd": ""
            },
            "problemMatcher": [
                "$gcc",
                "$msvc"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
    ]
}