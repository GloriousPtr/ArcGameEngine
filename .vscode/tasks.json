{
    "version": "2.0.0",
    "tasks": [
        // Debug
        {
            "label": "Build Debug",
            "type": "shell",
            "windows" :{
                "command": "${workspaceRoot}/scripts/GenerateSolution.bat \n msbuild ${workspaceRoot}/Arc.sln /property:Configuration=Debug /property:GenerateFullPaths=true /t:build /m /nologo /verbosity:minimal",
            },
            "linux": {
                "command": "./scripts/GenerateMake.sh && make config=debug -j$(nproc)",
            },
            "options": {
                "cwd": ""
            },
            "problemMatcher": [
                "$gcc",
                "$msCompile"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Clean Debug",
            "type": "shell",
            "windows" :{
                "command": "msbuild -target:Clean /property:Configuration=Debug /m /nologo /verbosity:minimal",
            },
            "linux": {
                "command": "make clean",
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },

